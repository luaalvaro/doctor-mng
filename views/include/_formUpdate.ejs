    <div class="form-content">
        <form action="/update?id=<%= doctors[0].id %>" method="POST">
            <div class="form-group">
                <label for="">NOME</label>
                <input type="hidden" name="id" value="<%= doctors[0].id %>">
                <input type="text" name="name" value="<%= doctors[0].name %>">
            </div>
            <div class="form-group">
                <label for="">CRM</label>
                <input type="text" name="crm" value="<%= doctors[0].crm %>">
            </div>
            <div class="form-group">
                <label for="">TELEFONE</label>
                <input type="text" name="telephone" value="<%= doctors[0].telephone %>">
            </div>
            <div class="form-group">
                <label for="">CELLPHONE</label>
                <input type="text" name="cellphone" value="<%= doctors[0].cellphone %>">
            </div>
            <div class="form-group">
                <label for="">CEP</label>
                <input type="text" name="cep" value="<%= doctors[0].cep %>">
            </div>
            <div class="form-group">
                <label for="">RUA</label>
                <input type="text" name="street" value="<%= doctors[0].street %>">
            </div>
            <div class="form-group">
                <label for="">BAIRRO</label>
                <input type="text" name="neighborhood" value="<%= doctors[0].neighborhood %>">
            </div>
            <div class="form-group">
                <label for="">CIDADE</label>
                <input type="text" name="city" value="<%= doctors[0].city %>"> 
            </div>
            <div class="form-group">
                <label for="">ESTADO</label>
                <input type="text" name="state" value="<%= doctors[0].state %>">
            </div>
            <div class="form-group">
                <label for="">ESPECIALIDADE</label>
                <input type="text" name="specialty" value="<%= doctors[0].specialty %>">
                
                <span class="error-description error-specialty"></span>
            </div>
            <button onclick="check()">SALVAR INFORMAÇÕES</button>
        </form>
        
    </div>